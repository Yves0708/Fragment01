<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- 使用「fragment」標籤加入Fragment -->
    <!-- 使用「class」指定Fragment包含套件的完整類別名稱 -->
    <!-- 使用「android:name」也可以，效果與「class」一樣 -->
    <fragment 
        class="net.cloud95.android.lession.fragment01.MyFragment01"
        android:id="@+id/myfragment01"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <fragment 
        class="net.cloud95.android.lession.fragment01.MyFragment02"
        android:id="@+id/myfragment02"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />  
        
    <FrameLayout 
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>
